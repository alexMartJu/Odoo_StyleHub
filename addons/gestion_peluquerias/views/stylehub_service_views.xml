<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Action para Servicios -->
    <record id="stylehub_service_action" model="ir.actions.act_window">
        <field name="name">Servicios</field>
        <field name="res_model">stylehub.service</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Vista Lista de Servicios -->
    <record id="stylehub_service_view_list" model="ir.ui.view">
        <field name="name">stylehub.service.list</field>
        <field name="model">stylehub.service</field>
        <field name="arch" type="xml">
            <list string="Servicios">
                <field name="name"/>
                <field name="duration" string="Duración (h)"/>
                <field name="price" string="Precio (€)"/>
                <field name="active" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Vista Formulario de Servicios -->
    <record id="stylehub_service_view_form" model="ir.ui.view">
        <field name="name">stylehub.service.form</field>
        <field name="model">stylehub.service</field>
        <field name="arch" type="xml">
            <form string="Servicio">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="price"/>
                            <field name="duration" string="Duración (horas)"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Descripción">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista Búsqueda de Servicios -->
    <record id="stylehub_service_view_search" model="ir.ui.view">
        <field name="name">stylehub.service.search</field>
        <field name="model">stylehub.service</field>
        <field name="arch" type="xml">
            <search string="Servicios">
                <field name="name"/>
                <filter name="active" string="Activos" domain="[('active','=',True)]"/>
            </search>
        </field>
    </record>

</odoo>
